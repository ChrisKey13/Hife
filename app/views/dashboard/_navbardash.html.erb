<div class="container-fluid">

<div class="navbar navbar-expand-sm navbar-light navbar-lewagon2 d-flex align-items -center justify-content-between mt-2">
  <div class="leftdivdash">
    <%= link_to root_path, class: "navbar-brand" do  %>
      <%= image_tag "logo.png" %>
      <% end %>
  </div>

  <div class="d-flex align-items-center justify-content-center flex-grow-1">
    <div>
        <%= link_to "Dashboard", dashboard_path, class: "bouton-text-nav-dash #{"activedash" if action_name == "home"}"%>
    </div>
    <div>
        <%= link_to "Analytics", dashboard_analytics_path, class: "bouton-text-nav-dash #{"activedash" if action_name == "analytics"}"%>
    </div>
  </div>

  <div class="d-flex justify-content-center align-items-center right-div">
      <div><%= link_to "Add A Meeting", new_meeting_path, class: 'bouton-red-smaller-dash'%></div>
    <ul>
      <li class="nav-item dropdown">
        <img class="avatar dropdown-toggle tof" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://res.cloudinary.com/wagon/image/upload/c_fill,g_face,h_200,w_200/qm8h3f1lbaotwfxxsmwh.jpg" />
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <div class="name-dropdown">
            <p class="text-funnel-dash"><%=User.first.first_name%></p>
          </div>
          <div class="link-dash first-link-dash">
          <%= link_to "Log Out", destroy_user_session_path, method: :delete, class:"text-icon-dash pt-2"%>
          </div>
          <div class="link-dash second-link-dash">
            <%= link_to "Homepage", root_path, class:"text-icon-dash pt-2"%>
          </div>
        </div>
      </li>
    </ul>
  </div>
</div>
</div>

  <% unless current_page?('/dashboard/analytics') %>
    <%= render 'homedash' %>
    <% else %>
    <%= render 'analytics' %>
  <% end %>
