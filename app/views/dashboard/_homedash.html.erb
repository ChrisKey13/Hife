    <div class="container-graph">
      <% @all_meetings = Meeting.all %>
      <% @all_users = User.all %>
      <% @future_meetings=[] %>
      <% @past_meetings= [] %>
      <% @all_meetings.each do |meeting| %>
        <% if meeting.start_time > Date.today %>
        <% @future_meetings << meeting %>
        <% else %>
        <% @past_meetings << meeting %>
        <% end %>
      <% end %>

      <div class="container-new-meeting">
        <p class= ""> Next meetings</p>
        <% if @future_meetings != nil %>
         <div class="card-meeting-future">
          <img src="<%= @future_meetings[0].activity.photo %>" class="future-photos">
          <div class="card-meeting-infos-future">
            <div class="title">
                <h2><%= @future_meetings[0].name %></h2>
            </div>
            <div class="activity">
              <p> <strong> <%=@future_meetings[0].activity.name%></strong></p>
            </div>
            <div class="paragraph">
              <p><%=@future_meetings[0].activity.description%></p>
            </div>
          </div>
            <div class="right">
              <h3 class="date-meeting" > <% @date_meeting = @future_meetings[0].start_time %>
                <%= DateFormat.change_to(@date_meeting, "LONG_DATE")  %>
              </h3>
              <p class="card-meeting-pricing-future"> <strong><%=@future_meetings[0].activity.duration %> min  saved</strong>
              </p>
            </div>
          </div>
        </div>
        <% end %>
      </div>
