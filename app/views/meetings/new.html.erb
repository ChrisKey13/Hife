<div class="col-6">
  <div class="container">
    <h1>Meeting Creation</h1>
    <div class="meeting-creation-carousel">
      <%= simple_form_for :meeting, url: meetings_path, method: "post" do |f| %>
        <div class="slider active-slide">
          <%= f.input :name, label: "Meeting name" %>
          <div class="slider-change">
            <div></div>
            <div class="slider-btn next-btn">Next</div>
          </div>
        </div>
        <div class="slider hidden-slide">
          <%= f.input :date, label: "When?", as: :string, required: false, input_html: {class: "datepicker"} %>
          <%= f.input :available_duration, label: "Duration" %>
          <%= f.input :meeting_description, label: "Short description" %>
          <%= f.input :team, collection: @teams, label: "Which team should attend?" %>
          <div class="slider-change">
            <div class="slider-btn previous-btn">Previous</div>
            <div class="slider-btn next-btn">Next</div>
          </div>
        </div>
        <div class="slider hidden-slide">
          <%= f.input :item_title, label: "Item title" %>
          <%= f.input :item_description, label: "Item description" %>
          <%= f.input :item_duration, label: "Duration" %>
          <%= f.input :item_owner, collection: @users, label_method: :his_name, label: "Collaborator in charge" %>
          <div class="slider-change">
            <div class="slider-btn previous-btn">Previous</div>
            <div class="slider-btn next-btn">Next</div>
          </div>
        </div>
        <div class="slider hidden-slide">
          <%#= f.input  :activity, collection: @activities, label: "Pick an activity", class: "card-activity"%>

          <div class="Card-activity">
            <% @activities.each do |activity| %>
            <div class="card-activity-description">
                <img src=<%= activity.photo %> >
              <div class="inactive-card-title">
                <h2><%= activity.name %></h2>
                <p> <%= activity.description%></p>
              </div>
            <% end %>
            </div>
            <div class="map">
          </div>


          </div>
          <div class="slider-change">
            <div class="slider-btn previous-btn">Previous</div>
            <%= f.submit "Create a meeting", class: "btn btn-primary" %>
          </div>
        </div>
      <% end %>
      <div class="slider-indicators-container">
        <div class="slider-indicators active">
        </div>
        <div class="slider-indicators">
        </div>
        <div class="slider-indicators">
        </div>
        <div class="slider-indicators">
        </div>
      </div>
    </div>
  </div>
</div>
<div class="col-6">

</div>


