<div class="meeting-creation-top"></div>
<div class="meeting-creation-carousel">
  <%= simple_form_for :meeting, url: meetings_path, method: "post" do |f| %>
    <div class="slider active-slide fade-in show">
      <div class="slider-form col-6">
        <h2>Please, name your meeting</h2>
        <%= f.input :name, label: "Meeting name" %>
        <div class="slider-change">
          <div></div>
          <div class="slider-btn next-btn">Next</div>
        </div>
        <div class="slider-indicators-container">
          <div class="slider-indicators active">
          </div>
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators">
          </div>
        </div>
      </div>
      <div class="col-6">
        <img src="../../../../assets/meeting1.png" alt="Meeting image">
      </div>
    </div>
    <div class="slider fade-in">
      <div class="slider-form col-6">
        <h2>Please, give us team details</h2>
        <%= f.input :date, label: "When?", as: :string, required: false, input_html: {class: "datepicker"} %>
        <%= f.input :available_duration, label: "Duration" %>
        <%= f.input :meeting_description, label: "Short description" %>
        <%= f.input :team, collection: @teams, label: "Which team should attend?" %>
        <div class="slider-change">
          <div class="slider-btn previous-btn">Previous</div>
          <div class="slider-btn next-btn">Next</div>
        </div>
        <div class="slider-indicators-container">
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators active">
          </div>
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators">
          </div>
        </div>
      </div>
      <div class="col-6">
        <img src="../../../../assets/meeting2.png" alt="Meeting image">
      </div>
    </div>
    <div class="slider fade-in">
      <div class="slider-form col-6">
        <h2>Please, detail the agenda</h2>
        <%= f.input :item_title, label: "Item title" %>
        <div class="form-group string required meeting_item_title"><label class="form-control-label string required" for="meeting_item_title">Item title <abbr title="required">*</abbr></label><input class="form-control string required" type="text" name="meeting[item_title]" id="meeting_item_title"></div>
        <%= f.input :item_description, label: "Item description" %>
        <%= f.input :item_duration, label: "Duration" %>
        <%= f.input :item_owner, collection: @users, label_method: :his_name, label: "Collaborator in charge" %>
        <div class="slider-change">
          <div class="slider-btn previous-btn">Previous</div>
          <div class="slider-btn next-btn">Next</div>
        </div>
        <div class="slider-indicators-container">
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators active">
          </div>
          <div class="slider-indicators">
          </div>
        </div>
      </div>
      <div class="col-6">
        <img src="../../../../assets/meeting4.png" alt="Meeting image">
      </div>
    </div>
    <div class="slider fade-in">
      <div class="slider-form">
        <h2>Please, pick an activity</h2>
        <%= f.input :activity, collection: @activities, label: "Pick an activity" %>
        <div class="slider-change">
          <div class="slider-btn previous-btn">Previous</div>
          <%= f.submit "Create a meeting", class: "btn btn-primary" %>
        </div>
        <div class="slider-indicators-container">
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators">
          </div>
          <div class="slider-indicators active">
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
