<div class="activity-choices">
  <div id="activities" data-ids=<%= activities.map(&:id).to_json %>>
    <div class="activity-choice fade-in active-slide show">

      <input type="radio" class="hidden hidden-slide" value="<%= activities[0].id %>" name="meeting[activity_ids][]" id="meeting_activity_ids_<%= activities[0].id %>">
      <label for="meeting_activity_ids_<%= activities[0].id %>" class="hidden-slide">
        <%= activities[0].name %>
      </label>
      <div class="card-activity">

        <div class="card-activity-photo" style="background-image: url('<%= activities[0].photo %>');">
        </div>

        <div class="card-activity-right">
          <div class="d-flex justify-content-between align-items-center">

          </div>
          <div class="card-activity-infos d-flex flex-column align-items-center justify-content-center">
            <div class="card-activity-title mt-5">
                <%= activities[0].name %>
            </div>
            <div class="card-activity-title-details d-flex flex-align-end justify-content-evenly mt-5">
              <div>
                <p class="subinfoactivity"><i class="far fa-clock pr-2"></i><%= "#{activities[0].duration} min" %></p>
              </div>
            </div>
<!--             <div class="card-activity-description">
              <%= activities[0].description %>
            </div> -->
          </div>
          <div class="card-activity-map">
            <div class="map" id='<%= "map_#{activities[0].id}" %>'
              style="height: 230px;"
              data-markers-activity="<%= {lng: activities[0].longitude, lat: activities[0].latitude}.to_json %>"
              data-markers-company="<%= {lng: @company.longitude, lat: @company.latitude}.to_json %>"
              data-markers-logo-company="<%= image_path @company.photo %>"
              data-mapbox-api-key='<%= ENV["MAPBOX_API_KEY"] %>'>
            </div>
          </div>
        </div>
      </div>

    </div>

  <% activities.shift %>
  <% activities.each do |activity| %>

    <div class="activity-choice fade-in hidden-slide">

      <input type="radio" class="hidden hidden-slide" value="<%= activity.id %>" name="meeting[activity_ids][]" id="meeting_activity_ids_<%= activity.id %>">
      <label for="meeting_activity_ids_<%= activity.id %>" class="hidden-slide">
        <%= activity.name %>
      </label>
      <div class="card-activity">

        <div class="card-activity-photo" style="background-image: url('<%= activity.photo %>');">
        </div>

        <div class="card-activity-right">
          <div class="card-activity-infos d-flex flex-column align-items-center justify-content-center">
            <div class="card-activity-title mt-5">
                <%= activity.name %>
            </div>
            <div class="card-activity-title-details d-flex flex-align-end justify-content-evenly mt-5">
              <div>
                <p class="subinfoactivity"><i class="far fa-clock pr-2"></i><%= "#{activities[0].duration} min" %></p>
              </div>
            </div>
<!--             <div class="card-activity-description">
              <%= activity.description %>
            </div> -->
          </div>
          <div class="card-activity-map">
            <div class="map" id='<%= "map_#{activity.id}" %>'
              style="height: 230px;"
              data-markers-activity="<%= {lng: activity.longitude, lat: activity.latitude}.to_json %>"
              data-markers-company="<%= {lng: @company.longitude, lat: @company.latitude}.to_json %>"
              data-markers-logo-company="<%= image_path @company.photo %>"
              data-mapbox-api-key='<%= ENV["MAPBOX_API_KEY"] %>'>
            </div>
          </div>
        </div>
      </div>

    </div>
  <% end %>
  </div>
</div>
